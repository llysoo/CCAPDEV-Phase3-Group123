<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User Profile</title>
    <link rel="stylesheet" href="/css styles/adminprofile.css">
</head>

<body>

    <header>
        <nav class="navbar-container">
            <div class="logo-container">
                <img src="assets\LOGO (WHITE).PNG">
            </div>
            <ul class="nav-links">
                <li><a href="/adminMenu">Home</a></li>
                <li><a href="/adminreserve">Reserve</a></li>
                <li><a href="/adminSearchUser">Search user</a></li>
                <li><a href="/adminProfile">Profile</a></li>
                <li><a href="/" id="logoutButton">Logout</a></li>
            </ul>
        </nav>
    </header>
    <div class="profile-card">
        <h1>User Profile</h1>
        <div class="profile-image">
            <img id="profileImage" alt="User Photo">
        </div>
        <div class="profile-details">
            <div>
                <label>Name: </label>
                <span id="profileName">{{user.name}}</span>
            </div>
            <div>
                <label>Email: </label>
                <span id="profileEmail">{{user.email}}</span>
            </div>
            <div>
                <label>Role: </label>
                <span id="profileRole">{{user.role}}</span>
            </div>
            <div>
                <label>Department: </label>
                <span id="profileDepartment">{{user.department}}</span>
            </div>
            <div>
                <label>Description: </label>
                <span id="profileDescription">{{user.description}}</span>
            </div>
            <div class="reservations-section">
                <h1>My Reservations</h1>
                <table id="userReservations">
                    <thead>
                        <tr>
                            <th>Lab</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Seat ID</th>
                            <th>Anonymous</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each reservations}}
                        <tr>
                            <td>{{this.lab}}</td>
                            <td>{{this.date}}</td>
                            <td>{{this.time}}</td>
                            <td>{{this.seatId}}</td>
                            <td>{{#if this.anonymous}}Yes{{else}}No{{/if}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>

        <center>
            <div class="button-grp">
                <button id="editButton" onclick="window.location.href = 'editprofile';" class="button">Edit
                    Information</button>
                <button id="editButton" onclick="window.location.href = 'adminMenu';" class="button">Back to Main
                    Menu</button>
                <button id="deleteUserButton" class="button">Delete User Account</button>
            </div>
        </center>
    </div>
    <script src="/js files/profile.js"></script>
    <script src="/js files/main.js"></script>
</body>

</html>